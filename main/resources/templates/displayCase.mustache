{{>layout/header}}
<div class="wrapper">
    <main class="container mt-5">
        <div class="text-center mb-5">
            <h1 class="fw-bold">거래소 페이지</h1>
            <hr class="w-25 mx-auto">
        </div>

        <section>
            <h2 class="mb-4">🛍️ 아이템 목록</h2>
            <div class="row g-4">
                {{#itemList}}
                    <div class="col-md-4">
                        <a href="/item/{{id}}" class="text-decoration-none text-dark">
                            <div class="card h-100 shadow-sm">
                                <div class="card-body">
                                    <h5 class="card-title">{{name}}</h5>
                                    <p class="card-text fw-bold text-primary">가격: {{price}} P</p>
                                    <p class="card-text text-muted">판매자: {{seller}}</p>
                                </div>
                            </div>
                        </a>
                    </div>
                {{/itemList}}
            </div>
        </section>
    </main>
    {{>layout/footer}}
</div>